{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "noImplicitReturns": false,
    "lib": [
      "dom",
      "es2015",
      "es2015.collection",
      "es2015.iterable"
    ],
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "./src/**/*",
    "./typings/*.d.ts", "gridsome.config.js"
  ]
}
