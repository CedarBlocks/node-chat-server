{
    "compilerOptions": {
      "baseUrl": "src",
      "outDir": "dist",
      "sourceMap": true,
      "module": "commonjs",
      "target": "esnext",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "downlevelIteration": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "allowJs": true,
      "lib": [
        "dom",
        "es2015",
        "es2015.collection",
        "es2015.iterable"
      ],
      "paths": {
        "@/*": ["*"]
      }
    },
    "include": [
      "src/**/*",
      "typings/*.d.ts"
    ]
  }
  