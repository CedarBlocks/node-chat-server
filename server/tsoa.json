{
  "entryFile": "src/server.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*Controller.ts"],
  "spec": {
    "outputDirectory": "src/api",
    "specVersion": 3
  },
  "routes": {
    "routesDir": "src/api",
    "iocModule": "src/api",
    "authenticationModule": "src/api"
  },
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  }
}